<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendsListFragment"
    android:id="@+id/fragmentFriendsList">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/FLview"
            android:layout_width="275sp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/fields_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FLRemoveFriend">

        </EditText>

        <TextView
            android:id="@+id/FLRemoveFriend"
            android:layout_width="115dp"
            android:layout_height="0dp"
            android:text="Encontre Amigos"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toTopOf="@+id/EPAddFriends"
            app:layout_constraintTop_toBottomOf="@+id/FLview"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="18sp"/>

        <Button
            android:id="@+id/EPAddFriends"
            style="@style/ButtonsFino"
            android:layout_width="300dp"
            android:background="@drawable/buttons_bg"
            android:onClick="AddFriends"
            android:layout_marginBottom="18dp"
            android:text="Add Friends"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>